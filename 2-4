#include<stdio.h>
int main()
{
    int x,a,b,c;
    scanf("%d", &x);
    a=b=c=x;
    printf("X++:%d\n",a++);
    printf("++X:%d\n",++b);
    printf("X--:%d\n",c--);
    printf("--X:%d\n",--x);
}
